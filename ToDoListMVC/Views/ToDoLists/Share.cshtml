@model ToDoListMVC.Models.ViewModels.ToDoLists.ShareToDoListViewModel

@{
    ViewData["Title"] = "Share";
}

<h1>Share</h1>

<h4>@Model.Title</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Share">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ShareUserId" class="control-label"></label>
                <select asp-for="ShareUserId" asp-items="Model.Users" class="form-control">
                    
                </select>
                <span asp-validation-for="ShareUserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
